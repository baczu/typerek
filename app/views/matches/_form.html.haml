= form_for @match, :html => { :class => 'form-horizontal' }, :remote => request.xhr? do |f|
  %fieldset
    .form-group
      = f.label :teamA, 'Drużyna 1', :class => 'col-lg-2 control-label'
      .col-lg-10= f.text_field :teamA, :class => 'form-control'
    .form-group
      = f.label :teamB, 'Drużyna 2', :class => 'col-lg-2 control-label'
      .col-lg-10= f.text_field :teamB, :class => 'form-control'
    .form-group
      = f.label :winA, 'Kursy', :class => 'col-lg-2 control-label'
      .col-lg-10.form-inline
        .input-group
          %span.input-group-addon 1
          = f.number_field :winA, :step => 0.01, :class => 'form-control', :size => 5, :disabled => @match.started? && !@match.new_record?
        .input-group
          %span.input-group-addon X
          = f.number_field :tie, :step => 0.01, :class => 'form-control', :size => 5, :disabled => @match.started? && !@match.new_record?
        .input-group
          %span.input-group-addon 2
          = f.number_field :winB, :step => 0.01, :class => 'form-control', :size => 5, :disabled => @match.started? && !@match.new_record?
        .input-group
          %span.input-group-addon 1X
          = f.number_field :winTieA, :step => 0.01, :class => 'form-control', :size => 5, :disabled => @match.started? && !@match.new_record?
        .input-group
          %span.input-group-addon X2
          = f.number_field :winTieB, :step => 0.01, :class => 'form-control', :size => 5, :disabled => @match.started? && !@match.new_record?
        .input-group
          %span.input-group-addon 12
          = f.number_field :NotTie, :step => 0.01, :class => 'form-control', :size => 5, :disabled => @match.started? && !@match.new_record?
    .form-group
      = f.label :start, 'Data rozpoczęcia', :class => 'col-lg-2 control-label'
      .col-lg-10= f.datetime_select :start, :class => 'form-control', :disabled => @match.started? && !@match.new_record?
    %hr
    .form-group
      = f.label :resultA, 'Wyniki', :class => 'col-lg-2 control-label'
      .col-lg-10.form-inline
        .input-group
          %span.input-group-addon Drużyna 1
          = f.number_field :resultA, :class => 'form-control', :size => 5, :disabled => !@match.started? && !@match.new_record?
        .input-group
          %span.input-group-addon Drużyna 2
          = f.number_field :resultB, :class => 'form-control', :size => 5, :disabled => !@match.started? && !@match.new_record?
    .form-group
      .col-lg-10.col-lg-offset-2
        = link_to 'Anuluj', matches_path, :class => 'btn btn-default', 'data-dismiss' => 'modal'
        = f.submit 'Zapisz', :class => 'btn btn-primary', :disable_with => 'Zapisuję ...'
        - unless @match.new_record?
          .pull-right
            = link_to 'Usuń mecz', match_path(@match), :method => :delete, :class => 'btn btn-danger', :confirm => 'Czy na pewno chcesz usunąć mecz?'
